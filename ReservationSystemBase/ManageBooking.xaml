<Page x:Class="ReservationSystemBase.ManageBooking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ReservationSystemBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageBooking">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Label FontSize="20" FontWeight="Bold" Content="Список полетов"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" VerticalAlignment="Center" HorizontalAlignment="Center" MaxHeight="500" MinHeight="250" MaxWidth="900" MinWidth="600"/>
        <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center">
            <Button Content="Обновить" Margin="25, 10" MinWidth="50" Width="100" MaxWidth="100" MaxHeight="30" MinHeight="10"/>
            <Button Content="Удалить" Margin="25, 10" MinWidth="50" Width="100" MaxWidth="100" MaxHeight="30" MinHeight="10"/>
        </WrapPanel>
    </Grid>
</Page>
